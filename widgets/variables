(defvar imgUser "widgets/icons/avatar.png")
(defvar previousImg "widgets/icons/previous.png")
(defvar nextImg "widgets/icons/next.png")
(defvar eww "$HOME/.local/bin/eww/eww -c $HOME/.config/eww/bar")
(defvar wifi_rev false)
(defvar br_reveal false)
(defvar vol_reveal false)
(defvar spotify_rev false)
(defvar battery_rev false)

(defpoll battery_percent :interval "15s" "./scripts/battery.sh --bat")
(defpoll battery_icon :interval "15s" "./scripts/battery.sh --bat-st")
(defpoll battery_color :interval "15s" "./scripts/battery.sh --bat-color")

(defpoll calendar_day :interval "20h" "date '+%d'")
(defpoll calendar_year :interval "20h" "date '+%Y'")

(defpoll imgSong :interval "1s" "widgets/scripts/getImage.sh")
(defpoll titleSong :interval "1s" "playerctl metadata --format '{{ title }}' --player=spotify")
(defpoll artistSong :interval "1s" "playerctl metadata --format '{{ artist }}' --player=spotify")

(defpoll songAndArtist :interval "1s" "playerctl metadata --format '{{ artist }} - {{ title }}' --player spotify")
(defpoll lengthSong :initial 0 :interval "1s" "playerctl metadata --format '{{mpris:length/1000000}}' --player spotify")
(defpoll positionSong :initial 0 :interval "1s" "playerctl metadata --format '{{ position/1000000 }}' --player spotify")

(defpoll dateTime :interval "10s" "date '+%A, %d %B %Y %H:%M'")

(defpoll volume_percent :interval "3s" "amixer -D pulse sget Master | grep 'Left:' | awk -F'[][]' '{ print $2 }' | tr -d '%'")

(defpoll statusSong :interval "1s" "widgets/scripts/playpause.sh")

(defpoll vol :interval "1s" "amixer -D pulse sget Master | grep 'Left:' | awk -F'[][]' '{ print $2 }' | tr -d '%'")
(defpoll brightness :interval "1s" "brightnessctl -m -d intel_backlight | awk -F, '{print substr($4, 0, length($4)-1)}' | tr -d '%'")


(defpoll date :interval "10s" `date "+%d/%m/%Y"`)
(defpoll time :interval "10s" `date "+%I:%M"`)

