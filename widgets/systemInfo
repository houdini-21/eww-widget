;; calendar

(defwidget system-date []
    (box    :orientation "h"
            :class "system__date"
            :space-evenly "false" 
            :spacing "0" 
            :valign "center"
            :halign "center"

        (label :class "system__date--label" :text "")
        (label :class "system__date--stats" :text "${date}" )
    )
)

;; notifications
(defwidget system-notifications[]
    (button 
            :orientation "h"
            :class "system__notifications"
            :space-evenly "false" 
            :spacing "0" 
            :valign "center"
            :halign "center"
            :onclick "dunstctl set-paused toggle"

        (label :class "system__notifications--label" :text "${notificationIcon}")
    )
)