;; system

(defwidget system []
    (box    :orientation "h"
            :class "system"
            :space-evenly "false" 
            :spacing "0" 
            :valign "center"
            :halign "center"

        (system-cpu)
        (system-memory)
        (system-time)
    )
)

(defwidget system-temp []
    (box    :orientation "h"
            :class "system"
            :space-evenly "false" 
            :spacing "0" 
            :valign "center"
            :halign "center"

        (system-cpu-temp)
        (system-date)
        (system-notifications)
    )
)

(defwidget system-cpu []
    (box    :orientation "h"
            :class "system__cpu"
            :space-evenly "false" 
            :spacing "0" 
            :valign "center"
            :halign "center"

        (label :class "system__cpu--label" :text "")
        (label :class "system__cpu--stats" :text "${cpuUsage}%" )
    )
)

;; cpu temp
(defwidget system-cpu-temp []
    (box    :orientation "h"
